<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30.0dip"
    android:orientation="horizontal"
    android:minWidth="30.0dip">

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/blackIcon1"
            android:layout_width="5.3dip"
            android:layout_height="5.3dip"
            android:layout_gravity="center"
            android:src="@drawable/brand_tag_point_black_bg" />

        <ImageView
            android:id="@+id/blackIcon2"
            android:layout_width="5.3dip"
            android:layout_height="5.3dip"
            android:layout_gravity="center"
            android:src="@drawable/brand_tag_point_black_bg" />

        <ImageView
            android:id="@+id/brandIcon"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:src="@drawable/brand_tag_point_white_bg" />
    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tag_text_bg_left"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="14.0sp" />


</LinearLayout>
